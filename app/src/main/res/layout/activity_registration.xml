<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.RegistrationActivity">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/bg_login"/>

    <Button
        android:id="@+id/btn_guest_login"
        android:text="GUEST LOGIN"
        android:layout_width="wrap_content"
        android:width="0dp"
        android:layout_alignLeft="@+id/fb_login_button"
        android:layout_alignRight="@+id/fb_login_button"
        android:layout_above="@+id/fb_login_button"
        android:layout_height="31dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/rectangle_outline_black_trans_rounded"
        android:layout_marginBottom="35dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:gravity="center|center_horizontal"
      />

    <Button
        android:id="@+id/fb_login_cus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:gravity="center|center_horizontal"
        android:background="@color/transparent"
        />

    <!--android:layout_marginTop="0dp"-->
    <!--android:paddingBottom="15dp"-->
    <!--android:paddingTop="15dp"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"

        android:layout_alignParentBottom="true"
        >
        <CheckBox
            android:id="@+id/cbTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/tvTC"
            android:text="I agree to StyleMyLooks T&amp;C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bar_indeterminate" />


</RelativeLayout>