            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:drawableLeft="@drawable/btn_mixmatch_option_hair_male"-->
            <!--android:text="Cart"-->
            <!--android:onClick="BtnCartHandler"-->
            <!--/>-->
        <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:drawableLeft="@drawable/btn_mixmatch_option_hair_male"-->
            <!--android:text="Buy"-->
            <!--android:onClick="BtnBuyHandler"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="center"-->
            <!--/>-->
        
    </LinearLayout>
</LinearLayout>
